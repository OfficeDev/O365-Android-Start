<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/ApplicationPageBackgroundThemeBrush</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorLink">@color/HyperLinkBrush</item>
        <item name="android:actionBarStyle">@style/O365ActionBar</item>
    </style>

    <!-- Action bar styles -->
    <style name="O365ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/SampleHeaderBrush</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:background">@color/SampleHeaderBrush</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeaderTheme">
        <item name="android:background">@color/ApplicationPageBackgroundThemeBrush</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11pt</item>
    </style>

    <style name="HeaderThemeSmall">
        <item name="android:background">@color/ApplicationPageBackgroundThemeBrush</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10pt</item>
    </style>

</resources>